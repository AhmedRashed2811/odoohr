<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Action for List and Form Views -->
    <record id="action_department_create" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.department</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Department List View -->
    <record id="view_department_list" model="ir.ui.view">
        <field name="name">hr.department.list</field>
        <field name="model">hr.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="manager_id" options="{'no_open': True}"/>
<!--                <field name="location"/>-->

                <button name="delete_department" string="Delete" type="object" class="btn btn-danger" confirm="Are you sure you want to delete this department?"/>
                <button name="update_department" string="Update" type="object" class="btn btn-primary"/>
            </list>
        </field>
    </record>

    <!-- Department Form View -->
    <record id="view_department_form" model="ir.ui.view">
        <field name="name">hr.department.form</field>
        <field name="model">hr.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="manager_id" options="{'no_create_edit': True}"/>
<!--                        <field name="location"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Assign Views to Action -->
    <record id="action_department_views_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_department_list"/>
        <field name="act_window_id" ref="action_department_create"/>
    </record>

    <record id="action_department_views_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_department_form"/>
        <field name="act_window_id" ref="action_department_create"/>
    </record>
</odoo>
