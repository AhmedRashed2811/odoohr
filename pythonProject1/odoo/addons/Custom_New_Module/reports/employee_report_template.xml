<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="employee_reporting_template">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="external_layout">
                    <div class="page">
                        <h1>Hello</h1>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <!-- Report Action -->
    <record id="report_employee_pdf_action" model="ir.actions.report">
        <field name="name">Employee Report</field>
        <field name="model">hr.employees</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Custom_New_Module.report_employee_pdf</field>
        <field name="report_file">Custom_New_Module.report_employee_pdf</field>
        <field name="print_report_name">Employee-Card</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" red="Custom_New_Module.model_hr_employees"/>
    </record>
</odoo>