<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Action for List and Form Views -->
    <record id="action_job_create" model="ir.actions.act_window">
        <field name="name">Job</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.job</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Job List View -->
    <record id="view_job_list" model="ir.ui.view">
        <field name="name">hr.job.list</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="department_id" options="{'no_open': True}"/>
                <field name="description"/>
<!--                <field name="expected_salary"/>-->
                <button name="delete_job" string="Delete" type="object" class="btn btn-danger" confirm="Are you sure you want to delete this job?"/>
                <button name="update_job" string="Update" type="object" class="btn btn-primary"/>
            </list>
        </field>
    </record>

    <!-- Job Form View -->
    <record id="view_job_form" model="ir.ui.view">
        <field name="name">hr.job.form</field>
        <field name="model">hr.job</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="department_id" options="{'no_create_edit': True}"/>
                        <field name="description"/>
<!--                        <field name="expected_salary"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Assign Views to Action -->
    <record id="action_job_views_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_job_list"/>
        <field name="act_window_id" ref="action_job_create"/>
    </record>

    <record id="action_job_views_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_job_form"/>
        <field name="act_window_id" ref="action_job_create"/>
    </record>
</odoo>
