<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="candidates_view_list" model="ir.ui.view">
        <field name="name">Candidates List</field>
        <field name="model">hr.customized.candidates</field>
        <field name="arch" type="xml">
            <list multi_edit="1" class="header_custom">

                <header>
                    <button name="evaluate_CVs_AI" type="object" string="Evaluate CVs" class="btn-primary"/>
                    <button name="candidates_xlsx_report" type="object" string="Download Report" class="btn-primary"/>
                </header>

                <field name="partner_name"/>
                <field name="partner_phone"/>
                <field name="age"/>
                <field name="email_from"/>
                <field name="job_required_id"/>
                <field name="cv_score"/>
                <field name="cv_rank"/>
                <field name="state" />
                <field name="active" />

            </list>
        </field>
    </record>











    <record id="candidates_view_search" model="ir.ui.view">
        <field name="name">Search Candidates</field>
        <field name="model">hr.customized.candidates</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_name"/>
                <filter name="medium_cv" string="Medium CV" domain="[('cv_rank', '=','Medium')]"/>
        

            </search>
        </field>
    </record>

    <record id="candidates_view_form" model="ir.ui.view">
        <field name="name">Emplopyees Form</field>
        <field name="model">hr.customized.candidates</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <header>
                        <!-- <field name="state" widget="statusbar"  statusbar_visible= "draft,interviewing" options="{'clickable':1}"/> -->
                        <button name="change_state_to_interviewing" type="object" string="Procced to interview" class="btn-primary" invisible= "state != 'draft'"/>
                        <button name="change_state_to_draft" type="object" string="Return to Draft" class="btn-secondary" invisible="state in ('draft', 'interviewing')"/>
                        <button name="open_hiring_view" type="object" string="Hiring" class="btn-success" invisible="state != 'interviewing'"/>
                        <button name="change_state_to_reject" type="object" string="Reject" class="btn-danger" invisible="state != 'interviewing'" confirm="Are you sure you want to reject this candidate?"/>
                        <field name="state" widget="statusbar"/>

                    </header>

                    <group >
                        <group>
                            <field name="partner_name"/>
                            <field name="partner_phone"/>
                            <field name="email_from"/>
                            <field name="birthday" />
                            <field name="age"/>
                            <field name="active" />

                        </group>

                        <group>
                            <!-- <field name="cv" widget="attachment"/>                             -->
                            <field name="job_required_id"/>
                            <field name="cv_score"/>
                            <field name="cv_rank"/>
                            <field name="salary" invisible= "state != 'hiring'" />
                            <field name="image" widget="image" options="{'size': [100, 100]}" invisible= "state != 'hiring'" />
                            <field name="cv" widget="binary"/>
                            <button type="object" name="candidate_cv_download" string="Download CV" class="btn-primary"  invisible="cv_score == 0"/>

                        </group>

                    </group>

                    <notebook>
                        <page string="Additional Information">
                            <field name="line_ids">
                                <list editable = "bottom">
                                    <field name="study" />
                                    <field name="lives_in" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div> -->


                <chatter open_attachments="True"/>

            </form>
        </field>
    </record>


    <record id="candidates_hiriring_view_form" model="ir.ui.view">
        <field name="name">Hiring New Employee</field>
        <field name="model">hr.customized.candidates</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <header>
                        <button name="change_state_to_hired" type="object" string="Add" class="btn-primary"/>

                    </header>

                    <group >
                        <group>
                            <field name="salary"/>
                        </group>

                        <group>
                            <field name="image" widget="image" options="{'size': [100, 100]}"/>

                        </group>

                    </group>

                </sheet>

                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div> -->


                <chatter open_attachments="True"/>

            </form>
        </field>
    </record>


    <record id="candidates_action" model="ir.actions.act_window">
        <field name="name">Candidates</field>
        <field name="res_model">hr.customized.candidates</field>
    </record>

    <record id="jobs_recruitment_action" model="ir.actions.act_window">
        <field name="name">Jobs</field>
        <field name="res_model">hr.customized.jobs</field>
    </record>


    <menuitem
        id="candidates_operations_menu"
        name="Manage Candidates"
        parent="recruitment_menu"
        action="candidates_action"
    />

    <menuitem
        id="jobs_recruitment_operations_menu"
        name="Manage Jobs"
        parent="jobs_menu_recruitment"
        action="jobs_recruitment_action"
    />

</odoo>
