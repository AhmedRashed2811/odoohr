<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employees_view_list" model="ir.ui.view">
        <field name="name">Employees List</field>
        <field name="model">hr.customized.employees</field>
        <field name="arch" type="xml">
            <list multi_edit="1">

                <header>
                    <button name="employees_xlsx_report" type="object" string="Download Report" class="btn-primary"/>
                </header>

                <field name="name"/>
                <field name="age"/>
                <field name="birth_date"/>
                <field name="image" widget="image" options="{'size': [100, 100]}"/>
                <field name="marital_status" optional="1"/>
                <button name="unlink" string="Delete" type="object" confirm="Are you sure you want to delete this employee?" class="btn-danger"/>
                <button name="update_employee" string="Update" type="object" class="btn btn-primary"/>
            </list>
        </field>
    </record>

    <record id="employees_view_search" model="ir.ui.view">
        <field name="name">Search Employees</field>
        <field name="model">hr.customized.employees</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="age"/>
                <filter name="is_maried" string="Is Maried?" domain="[('marital_status', '=','True')]"/>
                <filter name="group_age" string="Age" context="{'group_by':'age'}"/>
            </search>
        </field>
    </record>

    <record id="employees_view_form" model="ir.ui.view">
        <field name="name">Emplopyees Form</field>
        <field name="model">hr.customized.employees</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group >
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="email"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <field name="image" widget="image" options="{'size': [100, 100]}"/>
                        </group>

                        <group>
                            <field name="birth_date"/>
                            <field name="salary"/>
                            <field name="marital_status"/>
                            <field name="gender"/>
                            <field name="cv_file" />
                        </group>
                    </group>
                    <button name="unlink" string="Delete" type="object" confirm="Are you sure you want to delete this employee?" class="btn-danger"/>
                    <button name="update_employee" string="Update" type="object" class="btn btn-primary"/>
                </sheet>

            </form>
        </field>
    </record>

    <record id="employees_action" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">hr.customized.employees</field>
    </record>


    <menuitem
        id="employee_operations_menu"
        name="Manage Employees"
        parent="employees_menu"
        action="employees_action"
    />

</odoo>
