<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="departments_view_list" model="ir.ui.view">
        <field name="name">Departments List</field>
        <field name="model">hr.customized.departments</field>
        <field name="arch" type="xml">
            <list multi_edit="1">
                <field name="name"/>
                <field name="manager_id"/>
            </list>
        </field>
    </record>

    <record id="departments_view_search" model="ir.ui.view">
        <field name="name">Search Departments</field>
        <field name="model">hr.customized.departments</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="departments_view_form" model="ir.ui.view">
        <field name="name">Departments Form</field>
        <field name="model">hr.customized.departments</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group >
                        <group>
                            <field name="name"/>
                        </group>

                        <group>
                            <field name="manager_id"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="departments_action" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hr.customized.departments</field>
    </record>


    <menuitem
        id="departments_operations_menu"
        name="Manage Departments"
        parent="departments_menu"
        action="departments_action"
    />

</odoo>
